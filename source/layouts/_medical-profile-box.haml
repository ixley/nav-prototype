.medical-profile-box
  %ul.medical-profile-box__tabs{role: "tablist"}
    %li.medical-profile-box__tab.active{role: "presentation"}
      %a{"data-toggle" => "tab", href: "#medical-profile--demographics", role: "tab"} Demographics
    %li.medical-profile-box__tab{role: "presentation"}
