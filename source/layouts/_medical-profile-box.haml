      %a{"data-toggle" => "tab", href: "#medical-profile--lifestyle-diet", role: "tab"} Lifestyle &amp; Diet
  .medical-profile-box__tab-content
    .medical-profile-box__tab-pane.active#medical-profile--demographics{role: "tabpanel"}
      .medical-profile-box__section
        %h6.medical-profile-box__section-heading Basic Info
        %ul
          %li.medical-profile-box__entry--hide-label{"data-label" => "Age"}
            %span.medical-profile-box__label Age
            %span.medical-profile-box__value 
              %strong 36 yrs
          %li.medical-profile-box__entry--hide-label{"data-label" => "Gender"}
            %span.medical-profile-box__label Gender
            %span.medical-profile-box__value 
              %strong Female
          %li.medical-profile-box__entry--hide-label.medical-profile-box__entry--empty{"data-label" => "Weight"}
            %span.medical-profile-box__label Weight
            %span.medical-profile-box__value
          %li.medical-profile-box__entry--hide-label{"data-label" => "Height"}
            %span.medical-profile-box__label Height
            %span.medical-profile-box__value 
              %strong 5'0"
      .medical-profile-box__section
        %h6.medical-profile-box__section-heading Vitals
        %ul
          %li.medical-profile-box__entry--append-label{"data-label" => "BMI"}
            %span.medical-profile-box__label BMI
            %span.medical-profile-box__value 
              %strong 23.4
      .medical-profile-box__section
        %h6.medical-profile-box__section-heading Ethnicity
        %ul
          %li.medical-profile-box__entry--append-label{"data-label" => "Mother"}
            %span.medical-profile-box__label Mother
            %span.medical-profile-box__value
              %strong Hawaiian or Pacific Islander
          %li.medical-profile-box__entry--hide-label.medical-profile-box__entry--append-label{"data-label" => "Father"}
            %span.medical-profile-box__label Father
            %span.medical-profile-box__value
              %strong Asian
      .medical-profile-box__section
        %h6.medical-profile-box__section-heading Family
        %ul
          %li.medical-profile-box__entry--hide-label
