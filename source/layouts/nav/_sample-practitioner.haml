.user-badge.user-badge--primary
  %img.user-badge__image{src: "/images/jake.png"}
  %p.user-badge__name Jake the Practitioner

#nav-drawers.sidebar-nav__group{role: "tablist"}
  .sidebar-nav__panel
    #practitioner-heading.sidebar-nav__heading{role: "tab"}
      %h4.sidebar-nav__role{"data-toggle" => "collapse", "data-parent" => "#nav-drawers", "data-target" => "#collapse-practitioner"}
        Practitioner
    #collapse-practitioner.sidebar-nav__content.collapse.in{role: "tabpanel"}
      = partial "layouts/nav/_practitioner"

  .sidebar-nav__panel
    #personal-heading.sidebar-nav__heading{role: "tab"}
      %h4.sidebar-nav__role.collapsed{"data-toggle" => "collapse", "data-parent" => "#nav-drawers", "data-target" => "#collapse-personal"}
        Personal
    #collapse-personal.sidebar-nav__content.collapse{role: "tabpanel"}
      = partial "layouts/nav/_personal"
